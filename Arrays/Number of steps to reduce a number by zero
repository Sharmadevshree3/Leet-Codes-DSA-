class Solution {
public:
    int numberOfSteps(int num) {
        int i=0;
        while(num>0)
        {
            while(num%2==0)
            {
                num=num/2;
                i++;
            }

            while(num%2!=0)
            {
                num=num-1;
                i++;
            }
        }
        return i;
    }
};
